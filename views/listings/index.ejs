<% layout("/layouts/boilerplate") %>

<h3>All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col">
                <img src="<%= listing.image ? listing.image : '/images/default.jpg' %>" 
                     class="card-img-top" 
                     alt="listing_image" 
                     style="height: 20rem;"/>

                <div class="card-img-overlay">priya</div>

                <div class="card-body">
                    <p class="card-text">
                        &#8377; 
                        <% if (listing.price !== null && listing.price !== undefined) { %>
                            <%= listing.price.toLocaleString("en-IN") %>
                        <% } else { %>
                            Price not available
                        <% } %>
                        <i class="tax-info">&nbsp; &nbsp;Atul </i>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>